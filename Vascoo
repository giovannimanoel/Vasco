  /* Container da bandeira */
  .flag {
    position: relative;
    width: 90vw;
    max-width: 900px;
    aspect-ratio: 3 / 2; /* formato aproximado */
    background: #000;     /* campo preto */
    overflow: hidden;
    box-shadow: 0 6px 18px rgba(0,0,0,.45);
    margin: 2rem auto;
  }

  /* Faixa diagonal branca */
  .flag::before{
    content: "";
    position: absolute;
    /* cobrindo além das bordas para garantir a faixa diagonal completa */
    left: -20%;
    top: 35%;
    width: 140%;
    height: 28%;             /* espessura da faixa */
    background: #fff;        /* branca */
    transform: rotate(-25deg);
    transform-origin: center;
    filter: drop-shadow(0 0 0 rgba(0,0,0,0)); /* placeholder se quiser sombra */
  }

  /* Pequeno contorno escuro na faixa (para imitar leve borda) */
  .flag::after{
    content: "";
    position: absolute;
    left: -20%;
    top: 35%;
    width: 140%;
    height: 28%;
    transform: rotate(-25deg);
    transform-origin: center;
    box-shadow: inset 0 0 0 3px rgba(0,0,0,0.06);
    pointer-events: none;
  }

  /* Cruz (posicionada sobre a faixa, no lado do mastro) */
  .cross {
    position: absolute;
    left: 8%;               /* distância da borda esquerda (mastro) */
    top: 52%;               /* central verticalmente em relação à faixa */
    transform: translateY(-50%);
    width: 12%;             /* tamanho relativo da cruz (ajuste aqui) */
    max-width: 140px;
    min-width: 60px;
    aspect-ratio: 1 / 1;
    display: block;
    z-index: 2;             /* acima da faixa */
  }

  /* Mantém boa leitura em telas pequenas */
  @media (max-width: 420px){
    .flag { aspect-ratio: 4 / 3; }
    .flag::before { top: 38%; height: 30%; }
    .cross { left: 7%; width: 18%; max-width: none; }
  }
</style>
